@import "~@/assets/tokens/tokens.styl"

h1[class*="rsg--heading"]
  display none

h2[class*="rsg--heading2"]
  font-family "Fira Code", monospace
  font-weight $weight-bold

h3[class*="rsg--heading3"]
  font-family "Fira Code", monospace
  font-weight $weight-medium

  margin-top $space-larger

h4[class*="rsg--heading4"]
  font-family "Fira Code", monospace
  font-weight $weight-normal

  margin-top $space-larger

blockquote[class*="rsg--blockquote"]
  padding-left $space-large

  border-left $space-normal solid $color-tone-grey-lighter

  margin-left $space-zero

code[class*="rsg--code"]
  font-size 14px

  background-color $color-tone-grey-lighter

  padding $rspace-smaller

  border-radius $radius-normal

span[class*="rsg--smallSize"]
  font-size 15px
