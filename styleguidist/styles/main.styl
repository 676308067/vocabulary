@import "~@/assets/tokens/tokens.styl"

@import "~@/styles/media.styl"

@import "./constants.styl"

html
  scrollbar-color $scroll-foreground $color-main-scroll-background
  scrollbar-width thin

  +mouse-only()
    ::-webkit-scrollbar
      width 0.5em
      height 0.5em

    ::-webkit-scrollbar-track
      background-color $color-main-scroll-background

    ::-webkit-scrollbar-thumb
      background-color $scroll-foreground

main[class*="rsg--content"]
  padding-left $space-zero
  padding-right $space-zero
  padding-top $space-zero
  padding-bottom $space-zero

  div[class*="rsg--docs"]
    +phone-only()
      padding-left $space-normal
      padding-right $space-normal

    +tablet-portrait-up()
      padding-left $space-larger
      padding-right $space-larger

  div[class*="rsg--tabs"]
    +phone-only()
      display none

    +tablet-portrait-up()
      padding-left $space-larger
      padding-right $space-larger

  article[class*="rsg--root"]
    +phone-only()
      padding-left $space-normal
      padding-right $space-normal

    +tablet-portrait-up()
      padding-left $space-larger
      padding-right $space-larger

    & > div[class*="rsg--root"]
      a[title="Open isolated"]
        display none

  div[class*="rsg--wrapper"]
    h1
      & ~ div[class*="rsg--toolbar"]
        display none

  div[id*="-container"][class*="rsg--root"]
    +tablet-portrait-up()
      display inline-block

    min-width 100%

  div[class*="rsg--root"]
    & > div
      & > p[class*="rsg--para"]
        margin-left $space-large
