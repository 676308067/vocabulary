@import "~@/assets/tokens/tokens.styl"
@import "~@/styles/media.styl"
@import "~@/styles/list.styl"

.vocab.footer
  color $color-tone-grey-light
  background-color $color-tone-grey-darker

  padding $space-normal $space-zero

  a
    color inherit
    text-decoration none

    &:hover
      color $color-tone-white

  #branding
    display flex
    flex-direction column
    justify-content space-between

    .logo
      width 15rem
      max-width 100%

      margin $space-small $space-zero $space-large $space-zero

    .links
      .link-list
        piped-list-compact()

  #contact
    .address
      font-style normal

      margin-bottom $space-normal

    .contacts
      bland-list()

      color $color-blue
