@import "~@/assets/tokens/tokens.styl"
@import "~@/styles/media.styl"
@import "~@/styles/list.styl"

header
  color $color-tone-white

  &.blue
    background linear-gradient(
            90deg,
            $color-blue-dark,
            $color-blue,
            $color-blue-dark
    )

  &.green
    background linear-gradient(
            90deg,
            $color-green-dark,
            $color-green,
            $color-green-dark
    )

  &.magenta
    background linear-gradient(
            90deg,
            $color-magenta-dark,
            $color-magenta,
            $color-magenta-dark
    )

  &.olive
    background linear-gradient(
            90deg,
            $color-olive-dark,
            $color-olive,
            $color-olive-dark
    )

  &.orange
    background linear-gradient(
            90deg,
            $color-orange-dark,
            $color-orange,
            $color-orange-dark
    )

  &.purple
    background linear-gradient(
            90deg,
            $color-purple-dark,
            $color-purple,
            $color-purple-dark
    )

  &.red
    background linear-gradient(
            90deg,
            $color-red-dark,
            $color-red,
            $color-red-dark
    )

  &.sand
    background linear-gradient(
            90deg,
            $color-sand-dark,
            $color-sand,
            $color-sand-dark
    )

  &.yellow
    background linear-gradient(
            90deg,
            $color-yellow-dark,
            $color-yellow,
            $color-yellow-dark
    )

.flex
  width 100%

  display flex
  flex-direction row
  flex-wrap wrap
  align-items center
  justify-content space-between

  padding $space-normal $space-zero

.section
  padding $space-zero $space-normal

/deep/ #branding
  flex-grow 0

  margin $space-small $space-zero

  .homelink
    color inherit

    display flex
    flex-direction row
    align-items center

    text-decoration none

    &:visited
      color inherit

  .wordmark
    width 10rem

  .lettermark
    width 2.5rem
    margin-right $space-normal

  .name
    font-size $size-huge
    font-weight $weight-bold

#hamburger
  flex-grow 0

  +tablet-portrait-up()
    display none

#content
  margin-top 0

  +phone-only()
    text-align center

    width 100%

    max-height 0
    overflow hidden

    transition max-height 0.25s, margin 0.25s
