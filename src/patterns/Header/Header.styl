@import "~@/assets/tokens/tokens.styl"

@import "~@/styles/colors.styl"
@import "~@/styles/font-reset.styl"
@import "~@/styles/list.styl"
@import "~@/styles/media.styl"

.vocab.header
  // Color palette

  --header-primary $color-tone-near-black

  colors('--header-primary')

  --header-secondary white

  // Color

  --header-background-color var(--header-primary)
  --header-text-color var(--header-secondary)

  // Rules

  color var(--header-text-color)

  background-color var(--header-background-color)
  background-image linear-gradient(
    90deg,
    $color-overlay-black-low,
    transparent 15%,
    transparent 85%,
    $color-overlay-black-low
  )

  // Children

  a
    color inherit
    text-decoration none

  & > .container
    & > .flex
      display flex

      +tablet-portrait-down()
        flex-direction column

        padding $space-normal $space-normal

      +tablet-landscape-up()
        flex-direction row
        flex-wrap wrap
        justify-content space-between
        align-items center

        padding $space-normal $space-zero

      & > #branding-section
        flex-grow 0

        font-size $size-huge
        font-weight $weight-bold

        margin $rspace-small $space-zero

        & > .homelink
          display flex
          flex-direction row
          align-items center

          gap $space-small

          & > .brand-imagery
            font-reset()

        & > #hamburger
          +tablet-portrait-up()
            display none

          +phone-only()
            --button-border-color $color-tone-white

            -webkit-tap-highlight-color rgba(0, 0, 0, 0)

            .icon
              transform scale(0)

              transition-property transform
              transition-duration $duration-shortest

              &.active
                transform scale(1)

      & > #content-section

        &.collapsed
          max-height 0
          margin 0

        &:not(.collapsed)
          max-height 16em
          margin $rspace-small $space-zero

        +tablet-portrait-up()
          display flex
          flex-direction row
          align-items center

        +phone-only()
          text-align center

          width 100%
          max-height 0

          overflow hidden

          transition-property max-height, margin
          transition-duration $duration-shortest
