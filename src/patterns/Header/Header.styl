@import "~@/assets/tokens/tokens.styl"
@import "~@/styles/media.styl"
@import "~@/styles/list.styl"

header
  color $color-tone-white

  &.blue
    background linear-gradient(
            90deg,
            $color-blue-dark,
            $color-blue,
            $color-blue-dark
    )

  &.green
    background linear-gradient(
            90deg,
            $color-green-dark,
            $color-green,
            $color-green-dark
    )

  &.magenta
    background linear-gradient(
            90deg,
            $color-magenta-dark,
            $color-magenta,
            $color-magenta-dark
    )

  &.olive
    background linear-gradient(
            90deg,
            $color-olive-dark,
            $color-olive,
            $color-olive-dark
    )

  &.orange
    background linear-gradient(
            90deg,
            $color-orange-dark,
            $color-orange,
            $color-orange-dark
    )

  &.purple
    background linear-gradient(
            90deg,
            $color-purple-dark,
            $color-purple,
            $color-purple-dark
    )

  &.red
    background linear-gradient(
            90deg,
            $color-red-dark,
            $color-red,
            $color-red-dark
    )

  &.sand
    background linear-gradient(
            90deg,
            $color-sand-dark,
            $color-sand,
            $color-sand-dark
    )

  &.yellow
    background linear-gradient(
            90deg,
            $color-yellow-dark,
            $color-yellow,
            $color-yellow-dark
    )

.flex
  width 100%

  display flex
  flex-direction row
  flex-wrap wrap
  align-items center

  padding $space-normal $space-zero

.section
  padding $space-zero $space-normal

/deep/ #branding
  flex-grow 1

  display flex
  flex-direction row
  align-items center

  .wordmark
    width 10rem

  .lettermark
    width 2.5rem
    margin-right $space-normal

  .name
    font-size $size-huge
    font-weight $weight-bold

/deep/ #navigation
  flex-grow 0

  transition 0.25s max-height

  ul
    li
      &:hover
        color: white
        background-color rgba(0, 0, 0, 0.1)

  +phone-only()
    width 100%
    text-align center

    max-height 0
    overflow hidden

    ul
      bland-list()

      li
        padding $space-normal
        border-bottom 1px solid @color

        &:last-of-type
          border none

  +tablet-portrait-up()
    ul
      piped-list()

#hamburger
  flex-grow 0

  +tablet-portrait-up()
    display none

/deep/ a
  color inherit
  text-decoration none

  font-size $size-big
  font-weight $weight-bold
