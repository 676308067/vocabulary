@import "~@/assets/tokens/tokens.styl"

h1, h2, h3, h4, h5, h6
  margin $space-small $space-zero

  &.blue
    color $color-blue

  &.green
    color $color-green

  &.magenta
    color $color-magenta

  &.olive
    color $color-olive

  &.orange
    color $color-orange

  &.purple
    color $color-purple

  &.red
    color $color-red

  &.sand
    color $color-sand

  &.yellow
    color $color-yellow

  &.black
    color $color-tone-black

  &.inverted
    color $color-tone-white

h1
  font-size $size-mega

h2
  font-size $size-gigantic

h3
  font-size $size-enormous

h4
  font-size $size-huge

h5
  font-size $size-large

h6
  font-size $size-big
