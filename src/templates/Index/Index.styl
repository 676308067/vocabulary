@import "~@/assets/tokens/tokens.styl"

@import "~@/styles/page.styl"

.vocab.index
  page()

  main
    background radial-gradient($color-tone-white, $color-tone-near-white)

    min-height 100vh

    .styleguide-link
      color inherit

      font-weight $weight-bold

      text-decoration-style dotted

      &:hover
        text-decoration-style solid

  footer.vocab.footer
    .logo
      font-size $size-big // Scales logos up

    .panel
      height 100%

      display flex
      flex-direction column
      justify-content space-between

      .vocab.locale
        margin-top $space-normal
